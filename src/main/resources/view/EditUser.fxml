<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.EditUserController"
            prefHeight="200" prefWidth="400"
            style="-fx-background-color: #f4f4f4;">

    <Label text="Modifier le rôle d'un utilisateur"
           layoutX="50"
           layoutY="20"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <VBox layoutX="50" layoutY="70" spacing="20" prefWidth="300">
        <ComboBox fx:id="cmbRole" promptText="Sélectionnez le rôle" prefWidth="300"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnModifier" text="Modifier"
                    prefWidth="120"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
            <Button fx:id="btnAnnuler" text="Annuler"
                    prefWidth="120"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
        </HBox>
    </VBox>
</AnchorPane>
