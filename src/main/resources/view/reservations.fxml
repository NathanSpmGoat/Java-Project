<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ReservationController"
            prefHeight="450.0" prefWidth="600.0"
            style="-fx-background-color: #f0f2f5;">

    <VBox spacing="25" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="Gestion des Réservations"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               alignment="CENTER"/>

        <TableView fx:id="tableReservations" prefHeight="270" prefWidth="560"
                   style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #7f8c8d; -fx-border-width: 2 2 2 2; -fx-border-insets: 0;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colUtilisateur" text="Utilisateur" prefWidth="120"/>
                <TableColumn fx:id="colVehicule" text="Véhicule" prefWidth="120"/>
                <TableColumn fx:id="colDateDebut" text="Début" prefWidth="90"/>
                <TableColumn fx:id="colDateFin" text="Fin" prefWidth="90"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                <TableColumn fx:id="colMontant" text="Montant (€)" prefWidth="90"/>
            </columns>
        </TableView>

        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="btnAjouter" text="Ajouter" prefWidth="130"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"/>
            <Button fx:id="btnModifier" text="Modifier" prefWidth="130"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"/>
            <Button fx:id="btnSupprimer" text="Supprimer" prefWidth="130"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"/>
            <Button fx:id="btnExportPDF" text="Exporter PDF" prefWidth="150"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"/>
            <Button fx:id="btnBack" text="Retour Dashboard" prefWidth="150"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"/>
        </HBox>

    </VBox>
</AnchorPane>
