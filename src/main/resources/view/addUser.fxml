<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AddUserController"
            prefHeight="350" prefWidth="450"
            style="-fx-background-color: #f9f9f9;">

    <VBox alignment="CENTER" spacing="18" layoutX="40" layoutY="30"
          prefWidth="370" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 10, 0, 0, 4);">

        <Label text="Ajouter un utilisateur"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

        <TextField fx:id="txtNom" promptText="Nom" prefWidth="320"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;" />
        <TextField fx:id="txtPrenom" promptText="Prénom" prefWidth="320"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;" />
        <TextField fx:id="txtEmail" promptText="Email" prefWidth="320"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;" />
        <PasswordField fx:id="txtMotDePasse" promptText="Mot de passe" prefWidth="320"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;" />
        <ComboBox fx:id="cmbRole" promptText="Sélectionnez le rôle" prefWidth="320"
                  style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #dddddd; -fx-padding: 10;" />

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnAjouter" text="Ajouter" prefWidth="150"
                    style="-fx-background-color: #f27935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;" />
            <Button fx:id="btnAnnuler" text="Annuler" prefWidth="150"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;" />
        </HBox>

    </VBox>
</AnchorPane>
