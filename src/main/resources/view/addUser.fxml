<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AddUserController"
            prefHeight="300" prefWidth="400">

    <Label text="Ajouter un utilisateur" layoutX="120" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox layoutX="50" layoutY="50" spacing="10">

        <TextField fx:id="txtNom" promptText="Nom"/>
        <TextField fx:id="txtPrenom" promptText="Prénom"/>
        <TextField fx:id="txtEmail" promptText="Email"/>
        <TextField fx:id="txtRole" promptText="Rôle (ex: ADMIN ou UTILISATEUR)"/>
        <PasswordField fx:id="txtMotDePasse" promptText="Mot de passe"/>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnAjouter" text="Ajouter" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            <Button fx:id="btnAnnuler" text="Annuler"/>
        </HBox>
    </VBox>
</AnchorPane>