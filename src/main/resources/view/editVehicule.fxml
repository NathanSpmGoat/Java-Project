<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.EditVehiculeController"
            prefHeight="450.0" prefWidth="600.0"
            style="-fx-background-color: #f9f9f9;">

    <children>
        <VBox alignment="CENTER" spacing="12"
              layoutX="160" layoutY="20"
              prefWidth="280" prefHeight="400"
              style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 3);">

            <Label text="Modifier un véhicule"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

            <TextField fx:id="txtMarque" promptText="Marque" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <TextField fx:id="txtModele" promptText="Modèle" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <TextField fx:id="txtMatricule" promptText="Matricule" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <TextField fx:id="txtType" promptText="Type" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <TextField fx:id="txtPrix" promptText="Prix journalier" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />

            <ComboBox fx:id="comboEtat" promptText="État" prefWidth="250"
                      style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnModifier" text="Modifier" prefWidth="120"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" />
                <Button fx:id="btnAnnuler" text="Annuler" prefWidth="120"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
