<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AddReservationController"
            prefHeight="450.0" prefWidth="600.0"
            style="-fx-background-color: #f9f9f9;">

    <VBox layoutX="100" layoutY="20" spacing="15"
          prefWidth="400" prefHeight="400"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 3);">

        <Label text="Ajouter une réservation"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <VBox spacing="10">
            <Label text="Utilisateur :" />
            <ComboBox fx:id="cmbUtilisateur" promptText="Sélectionnez un utilisateur" prefWidth="340"
                      style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
        </VBox>

        <VBox spacing="10">
            <Label text="Véhicule :" />
            <ComboBox fx:id="cmbVehicule" promptText="Sélectionnez un véhicule" prefWidth="340"
                      style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
        </VBox>

        <VBox spacing="10">
            <Label text="Date début :" />
            <DatePicker fx:id="dpDateDebut" prefWidth="340"
                        style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
        </VBox>

        <VBox spacing="10">
            <Label text="Date fin :" />
            <DatePicker fx:id="dpDateFin" prefWidth="340"
                        style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
        </VBox>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnValider" text="Ajouter" prefWidth="140"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" />
            <Button fx:id="btnAnnuler" text="Annuler" prefWidth="140"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" />
        </HBox>

    </VBox>
</AnchorPane>
