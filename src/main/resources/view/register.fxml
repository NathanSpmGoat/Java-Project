<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterController"
            prefHeight="450.0" prefWidth="600.0"
            style="-fx-background-color: #f9f9f9;">

    <children>
        <VBox alignment="CENTER" spacing="12"
              layoutX="160" layoutY="20"
              prefWidth="280" prefHeight="400"
              style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 3);">

            <Label text="Créer un compte"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

            <TextField fx:id="nomField" promptText="Nom" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <TextField fx:id="prenomField" promptText="Prénom" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <TextField fx:id="emailField" promptText="Email" prefWidth="250"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />

            <PasswordField fx:id="passwordField" promptText="Mot de passe" prefWidth="250"
                           style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" prefWidth="250"
                           style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8; -fx-border-color: #cccccc;" />

            <Button text="Créer le compte"
                    prefWidth="180"
                    onAction="#handleCreateAccount"
                    style="-fx-background-color: #f27935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" />

            <Hyperlink fx:id="loginLink"
                       text="Déjà un compte ? Se connecter"
                       onAction="#goToLogin"
                       style="-fx-font-size: 12px; -fx-text-fill: #f27935;" />

        </VBox>
    </children>
</AnchorPane>
