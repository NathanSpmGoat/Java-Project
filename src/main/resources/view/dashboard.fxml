<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f4f4f4;">

    <Label text="Tableau de bord"
           layoutX="200"
           layoutY="20"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <VBox layoutX="20" layoutY="70" spacing="12">
        <Button text="Accueil Admin" fx:id="btnHomeAdmin" prefWidth="160"
                style="-fx-background-color: #f27935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
        <Button text="Véhicules" fx:id="btnVehicules" prefWidth="160"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
        <Button text="Réservations" fx:id="btnReservations" prefWidth="160"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
        <Button text="Utilisateurs" fx:id="btnUsers" prefWidth="160"
                style="-fx-background-color: #f1c40f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
    </VBox>

    <HBox layoutX="220" layoutY="70" spacing="15">
        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #3498db; -fx-border-width: 2;">
            <Label text="Véhicules disponibles" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <Label fx:id="lblVehicules" text="12" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #2ecc71; -fx-border-width: 2;">
            <Label text="Réservations actives" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <Label fx:id="lblReservations" text="5" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #f1c40f; -fx-border-width: 2;">
            <Label text="Utilisateurs inscrits" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <Label fx:id="lblUsers" text="20" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

</AnchorPane>
